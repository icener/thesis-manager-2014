body{
	background-repeat: no-repeat;
	background-size:cover;
}

#descriptiontextbox{
	resize: vertical;
	max-height: 200px;
}

#description_col{
	max-width: 100px;
}

#recordtable{
	border: 1px dashed #A7C49B;
	width: 800px;
}


#recordtable tr{
	padding-left: 5px;
	padding-right: 5px;
}


th{
	padding: 3px 5px 3px 3px;
}

#viewtable {
	min-width:200px;
	max-width:750px;
	background-color:#E6E6E6;
}

#viewtable td {
	overflow: hidden;
	width: 700px;
	background-color: #ffffff;
}

input[type=text]:focus, #desctextarea:focus {
	border-color: #F0AD4E;
	-webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(240,173,78, 0.6);
  box-shadow: inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(240,173,78, 0.6);
}

